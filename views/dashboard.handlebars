  <!-- Card to show previous posts and applicable comments  -->
  <!-- All rendered through handlebar utility functions -->
  {{#if blogs.length}}
  <div class="card-body blog-list">
    {{#each blogs as |blog|}}
    <div class="row">
      <div class="col-lg-12" id="existing-posts">
        
          <h5>On {{blog.created_on}} {{blog.user.username}} blogged: <a href="/blog/{{blog.id}}"></a>
            {{blog.title}} {{blog.content}} </h5>

          {{#if comments.length}}
          {{#each comments as |comment|}}
          <div class="col-md-12 existing-comments">
              <p>{{comment.user.username}} commented: <a href="/comment/{{comment.id}}"></a>
                {{comment.text}}</p>
              {{/each}}
              {{/if}}
              <button class="btn btn-md" id="view-blog-btn" data-id="{{blog.id}}">View Blog</button>
              {{#if blog.is_author}}
                <button class="btn btn-md" id="update-blog-btn" data-id="{{blog.id}}">Update Blog</button>
                <button class="btn btn-md" id="delete-blog-btn" data-id="{{blog.id}}">Delete Blog</button>
              {{/if}}
              {{#if logged_in}}
              <button class="btn btn-md" id="add-comment-btn" data-id="{{blog.id}}">Add Comment</button>
              {{/if}}
          </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}


<script src="/js/dashboard.js"></script>