<div class="blog col-10">
  {{#if this}}
  <!-- Card shows a single blog -->
  <h2>View Blog</h2>
  <div class="single-blog card-body text-white bg-secondary mb-3">
    <div class="card-title">
      <h5>{{this.title}}
      <p class="card-title float-right">By {{this.user.username}} on {{format_date created_on}}</p>
    </div>
    <div class="card-text">
      <p>{{this.content}}</p>
    </div>
  {{/if}}
    <div class="card-body col-10 existing-comments">
      {{#if comments.lenth}}
      {{#each comments as |comment|}}
        <p class="text-white">
          <small>{{comment.user.username}}commented: <a href="/api/comment/{{comment.id}}"></a>
            {{comment.text}}
          </small>
        </p>
      {{/each}}
      {{/if}}
    </div>

    <!-- Edit blog form -->
    <form class="form edit-blog-form">
    {{#if this}}
      <h4>Edit Blog</h4>
      <div class="form-group form-row">
        <input type="text" class="form-control col-8" id="blog-title" value="{{this.title}}" />
        <textarea type="text" class="form-control col-10" style="margin-top: 1rem" id="blog-content">{{this.content}}</textarea>
        <div class="form-group" style="margin-top: 1rem">
          <button class="btn btn-outline-light btn-sm" type="submit" id="update-blog-btn" style="margin-left: 1rem" data-id="{{blog.id}}">Update Blog</button>
          
        </div>
      </div>
    </form>

    <!-- Add comment form -->
    <form class="form new-comment-form">
      <h6>Add a Comment</h6>
      <div class="form-group form-row comment-div" style="margin-top: 1rem">
        <textarea type="text"  class="form-control col-6" id="comment-text" name="comment-text">Leave a comment here</textarea>
        <button class="btn btn-outline-light btn-sm" type="submit" id="add-comment-btn" style="margin-left: 1rem" data-id="{{comment.id}}">Add Comment</button>
      </div>
    {{/if}}
    </form>
  </div>
</div>

<script src="/js/blog.js"></script>
<script src="/js/comment.js"></script>